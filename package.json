{
  "name": "temp-hub",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npx vite build",
    "produce": "rm -rf build/ && electron-builder"
  },
  "author": "Rajat",
  "license": "ISC",
  "description": "Temporary Entertainment Hub for Personal TV",
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "vite": "^6.3.4"
  },
  "build": {
    "appId": "com.tempHub",
    "productName": "TempHub",
    "linux": {
      "target": "AppImage",
      "icon": "src/icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/icons/icon.png"
    },
    "directories": {
      "output": "build"
    }
  },
  "dependencies": {
    "loudness": "^0.4.2"
  }
}
